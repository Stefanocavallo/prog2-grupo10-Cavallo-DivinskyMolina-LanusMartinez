<!DOCTYPE html>
<html lang="es">
    <!-- Include Head -->
    <%- include('../views/partials/head.ejs') %>
    <body>
        <!-- Header -->
        <%- include('../views/partials/header.ejs') %>
        <!-- /Header -->
		<!-- Banner -->
		
		<div class="banner">
			<img src="images/bannerCars.png" alt="Banner de ofertas">
		</div>
		<!-- /Banner -->

        <!-- Productos -->
        <div class="container product-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Nuevas publicaciones</h2>
                </div>
                <!--Show nuevos productos-->
                <% for (let i = 0; i < info.length; i++) { %>
                    <% if(info[i].clase ===1){ %>
                        <div class="col-12 col-sm-6 col-lg-3">
                            <section class="product-box">
                                <a href="http://localhost:3000/cartastic/product/<%- info[i].nombreProducto%>">
                                    <figure class="product-box_image">
                                        <img src=<%- info[i].fotoProducto%> alt=''>
                                    </figure>
                                    <article class="product-box_data">
                                        <h2><%-info[i].nombreProducto%></h2>
                                        <p><%-info[i].descripcion%></p>
                                        <% if (info[i].comentariosProd2.length > 0) {%>
                                            <p>Comentarios: <%-info[i].comentariosProd2.length%></p>
                                        <%}%>
                                    </article>
                                </a>
                            </section>
                        </div>
                    <%}%>
                <%}%>
            </div>
        </div>
        <!--/Productos-->
        <!--M치s buscados-->
        <div class="container product-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title"> M치s buscados</h2>
                </div>
                <!--Show m치s buscados-->
                <% for (let i = 0; i < info.length; i++) {%>
                    <%if(info[i].clase ===2){%>
                        <div class="col-12 col-sm-6 col-lg-3">
                            <section class="product-box">
                                <a href="http://localhost:3000/cartastic/product/<%- info[i].nombreProducto%>">
                                    <figure class="product-box_image">
                                        <img src=<%- info[i].fotoProducto%> alt="">
                                    </figure>
                                    <article class="product-box_data">
                                        <h2><%- info[i].nombreProducto%></h2>
                                        <p><%- info[i].descripcion%></p>
                                        <% if (info[i].comentariosProd2.length > 0){%>
                                            <p>Comentarios: <%- info[i].comentariosProd2.length%></p>
                                        <%}%>
                                    </article>
                                </a>
                            </section>
                        </div>
                    <%}%>
                
                <%}%>
            </div>
        </div>
        <!--/M치s buscados-->

        <!--footer-->
        <%- include('./partials/footer')%>
        <!--/footer-->
    </body>
</html>