<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<% if (locals.user !=undefined) { %>
			<%- include('./partials/headerLogueado') %>
				<% } else { %>
					<%- include('./partials/header') %>
						<% } %>
							<!-- /Header -->

							<!-- Banner -->
							<div class="banner">
								<img src="images/bannerCars.png" alt="Banner de ofertas" height="350px">
							</div>
							<!-- /Banner -->

							<!-- Novedades -->
							<div class="container products-wrapper">
								<div class="row">
									<div class="col-12">
										<h2 class="products-title">Ãšltimas publicaciones</h2>
									</div>
									<!-- Show the "ultimos" products -->
									<% for(let i=0; i < 6; i++){ %>
										<div class="col-12 col-sm-6 col-lg-3">
											<section class="product-box">
												<a href="http://localhost:3000/cartastic/product/<%- info[i].id%>">
													<figure class="product-box_image">
														<img src='/images/products/<%= info[i].foto_producto %>'
															alt="<%- info[i].nombre_producto%>">
													</figure>
													<article class="product-box_data">
														<h2><%-info[i].nombre_producto %></h2>

														<p><%-info[i].descripcion_producto%></p>
														<p>Comentarios: <%- info[i].coment_product.length %></p>
														<a
															href="http://localhost:3000/cartastic/profile/<%= info[i].user_product.user%>">
															Publicado por: <%=info[i].user_product.user%></a>
													</article>
												</a>
											</section>
										</div>
										<% }%>
								</div>
							</div>

							<!-- footer -->
							<%- include('./partials/footer') %>
								<!-- /footer -->
	</body>

</html>